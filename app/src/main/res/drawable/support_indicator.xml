            <size android:width="8dp" android:height="30dp" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="#335C00" />
            <solid android:color="#0BE600" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
